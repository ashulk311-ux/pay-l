# Server Configuration
PORT=5000
NODE_ENV=development
# For Render deployment, use PORT=10000 and NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=payroll_db
DB_USER=postgres
DB_PASSWORD=your_password
# For Render PostgreSQL, use internal database host and credentials
# DB_SSL=false (set to false to disable SSL, default is true in production)

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# OAuth2.0 Configuration (Optional)
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# WhatsApp API Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# License Configuration
LICENSE_BLOCK_SIZE=50

# Matrix Software Integration (Optional)
MATRIX_API_URL=your_matrix_api_url
MATRIX_API_KEY=your_matrix_api_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
# For production, set to your Vercel frontend URL
# Example: FRONTEND_URL=https://your-app.vercel.app

# CORS Origin (optional, defaults to FRONTEND_URL)
CORS_ORIGIN=http://localhost:3000
# For production, set to your Vercel frontend URL

